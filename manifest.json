{
    "name": "Youtube AD Skipper",
    "version": "1.0",
    "description": "Youtube AD Skipper",
    "manifest_version": 2,
    "background": {
      "scripts": [
        "background.js"
      ]
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.youtube.com/*"
        ],
        "js": [
          "content.js"
        ]
      }
    ],
    "web_accessible_resources": [
      "style.css"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Youtube AD Skipper"
    }
  }